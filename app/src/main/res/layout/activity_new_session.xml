<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dnivra26.github.io.stuer.NewSessionActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/session_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="session name"
            android:inputType="text"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/session_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="session date"
            android:inputType="text"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/session_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="session start time"
            android:inputType="text"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/session_fee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="session fee in Rs. "
            android:inputType="number"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/session_duration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="session duration in hrs"
            android:inputType="number"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/session_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="select a session location"
            android:inputType="text"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/pickLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/ic_map_icon"
        android:text="Pick location" />

    <Button
        android:id="@+id/create_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/create_session"
        android:textColor="@android:color/white" />


</LinearLayout>
